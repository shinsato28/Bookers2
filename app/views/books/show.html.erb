<main>
  <div class="container mt-3 px-5">
    <div class="row">
      <div class="col-md-3 px-sm-0">
        <%= render 'users/userInfo', user: @user %>
        <%= render 'newbook', book: @newbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td width="200">
                <%= image_tag @user.get_profile_image(80,80) %> </br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td width="200"><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
              </td>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>