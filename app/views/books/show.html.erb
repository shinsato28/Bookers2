<main>
  <div class="container mt-3 px-5">
    <div class="row">
      <div class="col-md-3 px-sm-0">
        <h2>User info</h2>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row text-center mb-2">
          <%= link_to "", edit_user_path(@user), class: "fa-regular fa-pen-to-square btn btn-light btn-block border border-dark mx-auto" %>
        </div>

        <div>
          <div>
            <h2>New book</h2>
              <%= form_with model: @users do |f| %>
                <span class="d-block">Title</span>
                <%= f.text_field :title, class:"d-block" %>
                <span class="d-block mt-2">Opinion</spanh5>
                <%= f.text_area :body, class:"d-block" %>
                <%= f.submit 'Create Book', class:"btn btn-success mt-3" %>
              <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td width="200">
                <%= image_tag @user.get_profile_image(80,80) %> </br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td width="200"><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
                <% end %>
              </td>
              <td></td>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>