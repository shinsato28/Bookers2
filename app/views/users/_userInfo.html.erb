<h2>User info</h2>
<p><%= image_tag user.get_profile_image(100,100) %></p>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row text-center mb-2">
  <%= link_to edit_user_path(current_user), class: "btn btn-light btn-block border border-dark mx-auto" do %>
  <span class="fas fa-user-editx"></span>
  <% end %>
</div>