<h2>User info</h2>
<p><%= image_tag user.get_profile_image(100,100) %></p>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row text-center mb-2">
  <% if user.name != "guestuser" %>
    <%= link_to edit_user_path(user), class: "btn btn-light btn-block border border-dark mx-auto" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>