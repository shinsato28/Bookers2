<main>
  <div class="container mt-3 px-5">
    <div class="row">
      <div class="col-md-3 px-sm-0">
        <%= render 'userInfo', user: current_user %>
        <%= render 'books/newbook', book: @newbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <table class="table">
          <h2>Users</h2>
          <thead>
            <tr>
              <th width="50">image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(80,80) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id), class: "link-button" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>