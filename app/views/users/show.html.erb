<main>
  <div class="container mt-3 px-5">
    <div class="row">
      <div class="col-md-3 px-sm-0">
        <%= render 'userInfo', user: @user %>
        <%= render 'books/newbook', book: @newbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <table class="table">
          <h2>Books</h2>
          <thead>
            <tr>
              <th width="200"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>